{
  "name": "pool-monitor-card",
  "version": "2.1.0",
  "description": "Pool Monitor Card for Home Assistant",
  "main": "dist/pool-monitor-card.js",
  "type": "module",
  "scripts": {
    "build:fast": "rollup -c && npm run sync",
    "build": "npm run lint && npm run test && rollup -c && npm run sync",
    "dev": "rollup -c --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:report": "vitest run --reporter=html",
    "test:view": "vite preview --outDir test-results/html --port 3000",
    "test:html": "vitest --ui",
    "screenshot": "node scripts/take-screenshots.js",
    "visual-test": "node scripts/visual-test.js",
    "sync": "powershell.exe -ExecutionPolicy Bypass -File ./scripts/sync-views.ps1",
    "compile": "npm run build && npm run test:coverage && npm run screenshot && npm run visual-test"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@eslint/js": "^9.16.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@vitest/coverage-v8": "^2.1.6",
    "@vitest/ui": "^2.1.6",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.13.0",
    "jsdom": "^25.0.1",
    "pixelmatch": "^6.0.0",
    "playwright": "^1.40.0",
    "pngjs": "^7.0.0",
    "prettier": "^3.4.1",
    "rollup": "^4.28.0",
    "vitest": "^2.1.6"
  }
}
